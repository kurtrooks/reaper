#!/usr/bin/env python
import pygame
import rospy
import glob
import sys
from std_msgs.msg import Bool

def main():
	audio_files = []
	for file in glob.glob("audio_files/*"):
		audio_files.append(file)

	audio_files = [i[12:] for i in audio_files]
	print audio_files
	sys.exit(0)
	rospy.init_node('audio_driver_listener', anonymous=False)
	rospy.Subscriber('/audio_driver/scare_kids', Bool, audio_callback)

	pygame.init()
	pygame.mixer.init()

def audio_callback():
	pygame.mixer.music.load('/home/ubuntu/reaper/src/audio_driver/scary_john.mp3')
	pygame.mixer.music.play()


if __name__ == '__main__':
	main()
